<?xml version="1.0"?>
<psalm
    errorLevel="5"
    resolveFromConfigFile="true"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xmlns="https://getpsalm.org/schema/config"
    xsi:schemaLocation="https://getpsalm.org/schema/config vendor/vimeo/psalm/config.xsd"
>
    <projectFiles>
        <directory name="HTML" />
        <ignoreFiles>
            <directory name="vendor" />
        </ignoreFiles>
    </projectFiles>

    <issueHandlers>
        <InvalidArgument>
            <!--
            HTML_Common2::getAttributes() always returns string when given true as argument
            -->
            <errorLevel type="suppress">
                <file name="HTML/QuickForm2/Renderer/Default.php" />
                <referencedFunction name="str_replace" />
            </errorLevel>
        </InvalidArgument>
    </issueHandlers>
</psalm>
